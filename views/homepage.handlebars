<!-- Loop over each object in the projects array -->
<div class="container">
    {{#each blogPosts as |blogPost| }}
    <div class="row mb-4 blog">
        <div class="col-md-5">
            <h2>
                <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                <a href="/blogPost/{{blogPost.id}}">{{blogPost.title}}</a>
            </h2>
            <p>
                <!-- Pass needed_funding value to the helper function -->
                Posted by: {{blogPost.users.username}} on {{format_date blogPost.blog_date}}
            </p>
        </div>
        <div class="col-md-7">
            <p>
                {{blogPost.description}}
            </p>
        </div>
    </div>
    {{/each}}
</div>