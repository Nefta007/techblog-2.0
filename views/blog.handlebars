    <div class="blog_heading">
        <div class="blog_title">
            <h2>{{title}}</h2>
        </div>
        <div class="curr_date">
            <h3>Posted by {{user.username}} on {{format_date blog_date}}</h3>
        </div>
        <div class="post_description">
            <p>{{description}}</p>
        </div>
