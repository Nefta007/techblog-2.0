                {{/each}}
        </div> --}}
        <div class="new_post">
            <form class="new_post_form" action="/api/comment" method="post">
            <div class="comment_section">
                <label for="newDescription">Description</label>
                <input class="form-input" id="blog_body" name="blog_body"> 
            </div>
            <input type="hidden" name="blogPost_id" id="blogPost_id" value="{{id}}">
            <button class="btn btn-primary>" type="submit">Add Description</button>
            </form>
        </div>
        {{else}}
        <a href="/login">Login</a>
        {{/if}}
    </div>
    <div>
        {{each comments as |comment|}}
        <p>{{comment.blog_comment}}</p>
        {{/each}}
    </div>
</div>
